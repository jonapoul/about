<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/small"
    app:cardElevation="@dimen/small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/about_app_icon_size"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_about_launch" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/onSurface"
                android:textSize="@dimen/text_size_very_large"
                android:textStyle="bold"
                tools:text="App Name" />

            <TextView
                android:id="@+id/developed_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/onSurfaceSecondary"
                android:textSize="@dimen/text_size_small"
                tools:text="Developed by Some Guy" />

            <TextView
                android:id="@+id/app_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/onSurfaceSecondary"
                android:textSize="@dimen/text_size_small"
                tools:text="License v1.2.3" />

        </LinearLayout>

        <ImageView
            android:id="@+id/source_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/medium"
            android:src="@drawable/ic_about_launch"
            app:tint="?attr/primaryOnSurface"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
